<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MXparserTester" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="27">@color/dark_grey</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!--    CUSTOM STYLES -->
    <!--    Scientific Buttons -->
    <style name="ScientificButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/scientific_button_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ScientificButtons.ToggleButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--    Basic Calculator Buttons -->
    <style name="CalculatorButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">32sp</item>
    </style>

    <!--    Input box-->
    <style name="InputBox">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>